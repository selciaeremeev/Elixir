<Window x:Class="Elixir.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        Title="Elixir"
        Height="800" Width="1200"
        MinHeight="800" MinWidth="1200"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        SnapsToDevicePixels="True"
        Margin="0"
        Background="#1F1F1F">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0"
                      ResizeBorderThickness="{x:Static SystemParameters.WindowResizeBorderThickness}"
                      GlassFrameThickness="1"
                      CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <Border BorderBrush="#7160E8" BorderThickness="1">
        <Grid>

            <!-- カラム定義 -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <!-- サイドメニュー -->
                <ColumnDefinition Width="1"/>
                <!-- ボーダーライン -->
                <ColumnDefinition Width="*"/>
                <!-- メインコンテンツ -->
            </Grid.ColumnDefinitions>

            <!-- 行定義 -->
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <!-- タイトルバー -->
                <RowDefinition Height="*"/>
                <!-- メインコンテンツ -->
                <RowDefinition Height="40"/>
                <!-- フッター -->
            </Grid.RowDefinitions>

            <!-- カスタムタイトルバー (ウィンドウ全幅に拡張) -->
            <Grid Grid.Row="0" Grid.ColumnSpan="3" Background="#1F1F1F">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
                    <!-- 最小化ボタン -->
                    <Button Content="&#xE921;" FontFamily="Segoe MDL2 Assets"
                            Style="{StaticResource CaptionButtonStyle}" Click="Minimize_Click"
                            Panel.ZIndex="1" WindowChrome.IsHitTestVisibleInChrome="True"/>
                    <!-- 最大化ボタン -->
                    <Button x:Name="MaximizeButton" Content="&#xE922;" FontFamily="Segoe MDL2 Assets"
                            Style="{StaticResource CaptionButtonStyle}" Click="Maximize_Click"
                            Panel.ZIndex="1" WindowChrome.IsHitTestVisibleInChrome="True"/>
                    <!-- 閉じるボタン -->
                    <Button Content="&#xE8BB;" FontFamily="Segoe MDL2 Assets"
                            Style="{StaticResource CloseButtonStyle}" Click="Close_Click"
                            Panel.ZIndex="1" WindowChrome.IsHitTestVisibleInChrome="True"/>
                </StackPanel>
            </Grid>

            <!-- サイドメニュー -->
            <Grid Background="#1F1F1F" Grid.Row="1" Grid.Column="0" VerticalAlignment="Stretch">
                <StackPanel>

                    <!-- タイトルロゴ + テキスト -->
                    <StackPanel Orientation="Horizontal" Margin="10,10,10,20"
            HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Source="pack://application:,,,/Resources/Images/Logo.png" 
           Width="48" Height="48" Margin="0,0,10,0"/>
                        <TextBlock Text="Elixir" FontSize="18" Foreground="White" 
               FontWeight="Bold" VerticalAlignment="Center"/>
                    </StackPanel>


                    <!-- ScreenCap+ -->
                    <Button Style="{StaticResource MenuButton}" Click="NavigateToScreenCap">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <!-- アイコン -->
                                <ColumnDefinition Width="*"/>
                                <!-- テキスト -->
                            </Grid.ColumnDefinitions>
                            <fa:IconBlock Grid.Column="0" Icon="Camera" FontSize="16" 
                                          Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBlock Grid.Column="1" Text="ScreenCap+" FontSize="14" 
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </Button>

                    <!-- ScreenRec+ -->
                    <Button Style="{StaticResource MenuButton}" Click="NavigateToScreenRec">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <!-- アイコン -->
                                <ColumnDefinition Width="*"/>
                                <!-- テキスト -->
                            </Grid.ColumnDefinitions>
                            <fa:IconBlock Grid.Column="0" Icon="Video" FontSize="16" 
                                          Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBlock Grid.Column="1" Text="ScreenRec+" FontSize="14" 
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </Button>

                    <!-- Settings -->
                    <Button Style="{StaticResource MenuButton}" Click="NavigateToSettings">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <!-- アイコン -->
                                <ColumnDefinition Width="*"/>
                                <!-- テキスト -->
                            </Grid.ColumnDefinitions>
                            <fa:IconBlock Grid.Column="0" Icon="Cog" FontSize="16" 
                                          Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBlock Grid.Column="1" Text="Settings" FontSize="14" 
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- ボーダーライン -->
            <Border Grid.Row="1" Grid.Column="1" Background="#444"/>

            <!-- メインコンテンツ -->
            <Border Grid.Row="1" Grid.Column="2" Background="#1F1F1F">
                <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
            </Border>

            <!-- フッター (タイトルバーと同じデザイン) -->
            <Grid Grid.Row="2" Grid.ColumnSpan="3" Background="#1F1F1F">

                <!-- フッター右側: コピーライト情報 -->
                <TextBlock Grid.Column="1" Foreground="White" FontSize="12"
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>

        </Grid>
    </Border>
</Window>
