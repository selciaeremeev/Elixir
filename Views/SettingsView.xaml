<UserControl x:Class="Elixir.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Elixir.Views"
             Background="#1F1F1F">

    <StackPanel Margin="20">

        <!-- Title -->
        <TextBlock Text="Appearance" FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>

        <!-- Color Scheme Selection -->
        <StackPanel Orientation="Vertical" Margin="0,10,0,10">
            <TextBlock Text="Color Scheme" FontSize="14" Foreground="White" Margin="0,0,0,5"/>

            <StackPanel Orientation="Horizontal">

                <!-- Dark Theme (Selectable) -->
                <RadioButton Content="Dark (Default)" IsChecked="True"
                             Foreground="White" FontSize="12" Margin="0,0,10,0" />
                
                <!-- Light Theme (Grayed Out) -->
                <RadioButton Content="Light (Not Implemented)" IsEnabled="False"
                             Foreground="Gray" FontSize="12" Margin="0,0,10,0" />

                <!-- System Theme (Grayed Out) -->
                <RadioButton Content="System (Not Implemented)" IsEnabled="False"
                             Foreground="Gray" FontSize="12" />
            </StackPanel>
        </StackPanel>
        
        <!-- Visual Style Selection -->
        <StackPanel Orientation="Vertical" Margin="0,10,0,10">
            <TextBlock Text="Visual Style" FontSize="14" Foreground="White" Margin="0,0,0,5"/>

            <StackPanel Orientation="Horizontal">
                <!-- Normal Mode -->
                <RadioButton Content="Normal (Default)" IsChecked="True" Foreground="White" FontSize="12" Margin="0,0,10,0"/>

                <!-- Anime Mode -->
                <RadioButton Content="Anime" Foreground="White" FontSize="12" Margin="0,0,10,0" />

                <!-- Cat Mode -->
                <RadioButton Content="Cat" Foreground="White" FontSize="12" Margin="0,0,10,0" />
            </StackPanel>
        </StackPanel>

        <!-- Window Opacity Setting -->
        <StackPanel Orientation="Vertical" Margin="0,10,0,10">
            <TextBlock Text="Window Opacity" FontSize="14" Foreground="White" Margin="0,0,0,5"/>
            <Slider Minimum="0" Maximum="100" Value="100" TickFrequency="10" IsSnapToTickEnabled="True"/>
        </StackPanel>

    </StackPanel>
</UserControl>
